// Create a new switch statement using char instead of int
// create a new char variable
// create a switch statement testing for
// A, B, C, D, or E
// display a message if any of these are found and then break
// Add a default which displays a message saying not found

import java.util.Scanner;

public class SwitchChallenge {
    public static void main(String[] arrrrgs){
        Scanner input = new Scanner(System.in);
        char choice;
        System.out.print("Input a character: ");
        choice = input.nextLine().charAt(0); //get char and store in choice

        switch(choice){ //test choice for sought characters
            case 'A':
            case 'B':
            case 'C':
            case 'D':
            case 'E':
                System.out.println("Found "+ choice+"."); //output desired result
                break;
            default:
                System.out.println("A, B, C, D, or E not found."); //desired result not found
        }
    }

}
